{
  "name": "buddy",
  "version": "1.0.0",
  "description": "Buddy - WhatsApp AI Assistant with memory and persona",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "check": "node check-features.js",
    "start": "npm run check && node dist/src/index.js",
    "dev": "tsc && node dist/src/index.js",
    "watch": "tsc --watch",
    "setup": "node dist/src/index.js --setup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@google/genai": "^1.41.0",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "docx": "^9.5.1",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "node-cron": "^4.2.1",
    "officeparser": "^6.0.4",
    "openai": "^4.68.0",
    "pdfkit": "^0.17.2",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "pptxgenjs": "^4.0.1",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.33.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.17.4",
    "@types/qrcode-terminal": "^0.12.2",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
