# Contact Whitelist
# Set to "all" to allow everyone, or comma-separated phone numbers/group JIDs
# Examples: ALLOWED_NUMBERS=1234567890,0987654321,120363123456789012@g.us
ALLOWED_NUMBERS=all

# =============================================================================
# FEATURE FLAGS (Safe Incremental Development)
# Set to 'true' to enable a feature, 'false' to disable
# All features default to 'false' for safety
# =============================================================================

# Phase 1: Safe Foundations (Low Risk)
FF_URL_SUMMARIZATION=false
FF_TRANSLATION_MODE=false
FF_MESSAGE_CHUNKING=false
FF_REMINDER_SYSTEM=false
FF_STICKER_CREATION=false

# Phase 2: Core Enhancements (Medium Risk)
FF_INTENT_CLASSIFICATION=false
